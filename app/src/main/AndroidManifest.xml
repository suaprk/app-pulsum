<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 하드웨어 feature 태그 추가 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <!-- 권한 추가 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PULSUM"
        tools:targetApi="31">

        <!-- OnboardingActivity를 런처로 설정 -->
        <activity
            android:name=".OnboardingActivity"
            android:exported="true"
            android:theme="@style/Theme.Pulsum.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (런처 제거, 중복 제거) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.PULSUM" />

        <!-- SearchActivity -->
        <activity
            android:name=".SearchActivity"
            android:exported="false" />

        <!-- PlantDetailActivity -->
        <activity
            android:name=".PlantDetailActivity"
            android:exported="false" />

        <!-- ImageAddActivity -->
        <activity
            android:name=".ImageAddActivity"
            android:exported="false" />

        <!-- NotificationsActivity -->
        <activity
            android:name=".NotificationsActivity"
            android:exported="false" />

        <!-- EditProfileActivity -->
        <activity
            android:name=".EditProfileActivity"
            android:exported="false" />

        <activity
            android:name=".PlantSelectionActivity"
            android:exported="false" />

        <activity
            android:name=".PlantCareActivity"
            android:exported="false" />

        <activity
            android:name=".OfferActivity"
            android:exported="false"
            android:theme="@style/Theme.Pulsum.Fullscreen" />

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.pulsum.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>