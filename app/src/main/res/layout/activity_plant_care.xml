<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 이미지와 네비게이션 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <!-- 식물 이미지 -->
            <ImageView
                android:id="@+id/iv_plant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/monstera" />

            <!-- 상단 네비게이션 오버레이 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- 뒤로가기 버튼 -->
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/nav_button_background"
                    android:padding="4dp"
                    android:contentDescription="뒤로가기" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- 공유 버튼 -->
                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="@drawable/nav_button_background"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="공유" />

                <!-- 편집 버튼 -->
                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/nav_button_background"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="편집" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 콘텐츠 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 제목 -->
            <TextView
                android:id="@+id/tv_plant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How To Care Monstera"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 식물 정보 태그들 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/tv_plant_scientific"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monstera deliciosa"
                    android:background="@drawable/tag_background"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_plant_origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pennsylvania"
                    android:background="@drawable/tag_background"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_plant_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Air-cleaning"
                    android:background="@drawable/tag_background"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Lights 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lights"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monstera prefers bright, indirect light. Avoid direct sunlight which can scorch leaves. Too little light slows growth and reduces leaf splits."
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Watering 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watering"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Water when top 1-2 inches of soil are dry. Avoid overwatering and ensure good drainage to prevent root rot."
                android:textColor="#666666"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>