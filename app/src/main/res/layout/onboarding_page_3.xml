<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/onboarding_background_monstera"
        android:scaleType="centerCrop" />

    <!-- 그라디언트 오버레이 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />

    <!-- 전체 컨텐츠 컨테이너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp">

        <!-- 카메라 프레임 영역 -->
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="60dp">

            <!-- 점선 테두리 프레임 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/camera_frame_dashed" />

            <!-- 플러스 아이콘 -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:background="@drawable/plus_background_white"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/plus_icon_white" />

            </LinearLayout>

        </RelativeLayout>

        <!-- 텍스트 영역 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Register Plants 제목 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register "
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plants"
                    android:textColor="#9ACD32"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 부제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose the plant you grow"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:alpha="0.9"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>